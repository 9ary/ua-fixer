{
  "manifest_version": 2,
  "name": "ua-fixer",
  "description": "Force Mobile user agent instead of Tablet and spoof Chrome for Google search",
  "author": "Thomas Wisniewski <twisniewski@mozilla.com>, Streetwalrus",
  "version": "1.0",
  "homepage_url": "http://github.com/Streetwalrus/ua-fixer",
  "applications": {
    "gecko": {
      "id": "ua-fixer@wank.party",
      "strict_min_version": "56.0"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "common.js", "background.js"
    ]
  },
  "content_scripts": [{
    "js": ["common.js", "content.js"],
    "run_at": "document_start",
    "matches": ["*://*/*"]
  }]
}
